            <unsubscribe>buildbox+unsubscribe@googlegroups.com</unsubscribe>
        </mailingList>
    </mailingLists>
    <issueManagement>
        <system>github</system>
        <url>https://github.com/buildbox/${project.artifactId}/issues</url>
    </issueManagement>
    <organization>
